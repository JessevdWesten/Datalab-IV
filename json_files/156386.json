                        ],
                        "responseDeclarations": [
                            {
                                "identifier": "5781625_1",
                                "cardinality": "single",
                                "baseType": "string",
                                "correctResponse": {
                                    "interpretation": null,
                                    "values": [
                                        {
                                            "fieldIdentifier": null,
                                            "value": "<p>Veel Russische gas gaat naar de Europese Unie. De EU is dus afhankelijk van Russisch gas en heeft belang bij een stabiel Rusland. In Tsjetsjeni&euml; is ook een oliepijp en landen willen niet dat de oliepijp kapot gaat, iets wat sneller kan gebeuren wanneer Tsjetsjeni&euml; in opstand komt.</p>\r\n"
                                        }
                                    ]
                                },
