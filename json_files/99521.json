            "heading": {
                "type": "heading",
                "content": "Visuele Blauwdruk",
                "level": 1
            },
            "items": [
                {
                    "type": "image",
                    "src": "https://maken.wikiwijs.nl/userfiles/9/92b519c5a14807aba2781d98253eb386193c3850.jpg",
