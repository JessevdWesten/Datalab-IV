            "items": [
                {
                    "type": "paragraph",
                    "content": "<h3>UItlegvideo: Directe belastingen</h3>\n<iframe width=\"560\" height=\"315\" src=\"https://www.youtube.com/embed/p1Tt5uOL--s\" frameborder=\"0\" allow=\"autoplay; encrypted-media\" allowfullscreen=\"allowfullscreen\" class=\"video-item\"/>"
