                {
                    "reference": {
                        "value": "852909"
                    },
                    "heading": {
                        "type": "heading",
                        "content": "Op zoek naar werk",
                        "level": 2
                    },
                    "items": [
                        {
                            "type": "image",
                            "src": "https://maken.wikiwijs.nl/userfiles/4/4cafb3ac821e4bb2084cac16f83d3f7298dfc9ae.JPG",
